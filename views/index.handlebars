<main class="container">

  <div class="row justify-content-center">

    <img class="col - 4" src="/images/burger.jpg" id="burgerImg">

  </div>

    <div class="row justify-content-center">

      <h1 class="col-6 offset-3">EAT-DAT-BURGER!</h1>

    </div>


  <div class="row justify-content-center">

    <form class="createForm">

      <div class="form-group">

        <label for="newBurger">Hungry? What would you like?</label>
        <input type="text" id="newBurger" name="title">

      </div>

      <button type="submit" class="btn-primary">Submit</button>

    </form>

  </div>

  <div class="row justify-content-center">

    <section id="menu" class="col-5 p-5">

      <h2>Menu</h2>
      <ol>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <p>Title: {{title}}</p>
          <button data-id ="{{this.id}}" data-devour ="{{this.devoured}}" class="devour">Devour<button>
        </li>
        {{/unless}}
        {{/each}}
      </ol>

    </section>
    <section id="devoured" class="col-5 p-5 offset-1">

      <h2>Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <p>Title: {{title}}</p>
        </li>
        {{/if}}
        {{/each}}
      </ul>

    </section>

  </div>
</main>